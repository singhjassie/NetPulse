<CaptureScreen>:
    name: 'capturescreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDTabs:
            Tab:
                title: 'Capture'
                tab_label_font_style: 'Subtitle1'
                MDBoxLayout:
                    orientation: 'horizontal'
                    Splitter:
                        sizable_from: 'right'
                        strip_size: 2
                        border: .1, .1, .1, .1
                        orientation: 'horizontal'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: 10
                            MDTextField:
                                id: filter_box
                                hint_text: 'Apply Filter'
                                font_style: 'Subtitle1'
                                mode: 'rectangle'
                                on_text_validate: root.apply_filter(self.text) 

                            RecycleView:
                                id: rv
                                key_viewclass: 'viewclass'
                                RecycleBoxLayout:
                                    size_hint_y: None
                                    height: self.minimum_height
                                    orientation: 'vertical'
                                    default_size_hint: 1, None

                    MDBoxLayout:
                        orientation: 'vertical'
                        Splitter:
                            sizable_from: 'bottom'
                            strip_size: 2
                            border: .1, .1, .1, .1
                            MDScrollView:
                                MDBoxLayout:
                                    id: detail_box
                                    orientation: 'vertical'
                                    padding: 15
                                    size_hint_y: None
                                    height: 30 * len(self.children)
    
                        MDScrollView:
                            MDBoxLayout:
                                id: hex_box
                                orientation: 'vertical'
                                padding: 15
                                size_hint_y: None
                                height: 30 * len(self.children)

            Tab:
                title: 'Dashboard'
                tab_label_font_style: 'Subtitle1'
            Tab:
                title: 'Troubleshoot'
                tab_label_font_style: 'Subtitle1'
            Tab:
                title: 'Preferences'
                tab_label_font_style: 'Subtitle1'
            Tab:
                title: 'Help'
                tab_label_font_style: 'Subtitle1'
        
        MDBoxLayout:
            id: status_bar
            md_bg_color: app.theme_cls.primary_color
            orientation: 'horizontal'
            padding: 10, 0, 10, 0
            size_hint_y: None
            height: 30
            MDLabel:
                id: capture_name
            Widget:
            MDLabel:
                id: packet_count
                text: 'Total Packets: 0'
                halign: 'right'


<MenuBar@MDBoxLayout>:
    md_bg_color: app.theme_cls.primary_color
    size_hint: 1, None
    height: 30
    MDFlatButton:
        text: 'File'
    MDFlatButton:
        text: 'Edit'
    MDFlatButton:
        text: 'View'
    MDFlatButton:
        text: 'Packet'
