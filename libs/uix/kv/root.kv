<Root>:
    orientation: 'vertical'
    MDTopAppBar:
        id: top_bar
        md_bg_color: app.theme_cls.primary_color
        right_action_items:  [['brightness-6', lambda _ : app.switch_theme()]]

    MDBoxLayout:

        MDNavigationRail:
            md_bg_color: app.theme_cls.bg_light
            MDNavigationRailItem:
                text: 'Home'
                icon: 'home'
            MDNavigationRailItem:
                text: 'DashBoard'
                icon: 'chart-bar'
            MDNavigationRailItem:
                text: 'Settings'
                icon: 'cog-outline'
            MDNavigationRailItem:
                text: 'Help'
                icon: 'help'
            
        MDScreenManager:
            id: screen_manager
